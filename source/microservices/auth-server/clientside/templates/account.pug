
doctype html
html
	head
		meta(charset="utf-8")
		title Account

	body
		h1 Account
		div(id="google-signin")
		a(id="google-signout" href="#" onclick="signOut()" style="display: none;") Sign out

		script.
			window.settings = !{JSON.stringify(locals.settings)}
			function googleReady() {
				if (window.start) start()
				else window.startReady = true
			}

		script(type="importmap-shim" src="dist/importmap.json")
		script(type="module-shim" src="dist/microservices/auth-server/clientside/script-account.js")
		script(async defer src="https://unpkg.com/es-module-shims@0.5.1/dist/es-module-shims.js")

		script(async defer src="https://apis.google.com/js/platform.js?onload=googleReady")
